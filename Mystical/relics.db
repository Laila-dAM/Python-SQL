CREATE TABLE relics (
    name TEXT,
    power TEXT,
    location TEXT,
    status TEXT CHECK(status IN ('active', 'lost', 'destroyed')),
    history TEXT
);

INSERT INTO relics (name, power, location, status, history)
VALUES ('Flame of Eternity', 'Fire Control', 'Volcano of Darkness', 'active', 'A flame that burns forever...');

